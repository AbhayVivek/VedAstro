@using Genso.Astrology.Library
<div class="row">
    <div class="col-5">
        <label class="form-label" >Time (24h)</label>
        <input class="form-control" @bind="HourMin" type="text" placeholder="16:20">
    </div>
    <div class="col-5">
        <label class="form-label" >Date</label>
        <input class="form-control" @bind="Date" type="text" placeholder="16/04/2021">
    </div>
    <div class="col">
        <label class="form-label">Timezone</label>
        <input class="form-control" @bind="TimeZone" type="text" placeholder="+08:00">
    </div>
</div>


@code {

    public string? HourMin
    {
        get => _hourMin;
        set
        {
            _hourMin = value;
            StateHasChanged();
        }
    }

    public string? Date
    {
        get => _date;
        set
        {
            _date = value;
            StateHasChanged();
        }
    }

    public string? TimeZone
    {
        get => _timeZone;
        set
        {
            _timeZone = value;
            StateHasChanged();
        }
    }

    public string? FullTimeString
    {
        get => $"{HourMin} {Date} {TimeZone}";
        set { return; }
    }


    private string? _hourMin = DateTime.Today.ToString("HH:mm");
    private string? _date = DateTime.Today.ToString("dd/MM/yyyy");
    private string? _timeZone = DateTimeOffset.Now.ToString("zzz");
}
